<div style="border-bottom:1px solid gray; padding:7.5px 25px;">
	<div style="color:blue;">House</div>
	<div>House ID: <%= @house.id %></div>
	<div>Address: <%= @house.address %></div>
	<div>BHK: <%= @house.bhk %></div>
	<div>No. of Beds: <%= @house.no_of_beds %></div>
	<div>Allowed Gender: <%= @house.allowed_gender %></div>
	<div>Locality: <%= @house.locality.name %></div>
	<div>City: <%= @house.locality.city.name %></div>

	<div style="margin: 5px 25px;">
		<div style="color:cadetblue;">Amenities</div>
		<% @house.amenities.each do |amenity| %>
			<div><%= amenity.name %></div>
		<% end %>
	</div>

	<% @beds = @house.beds %>
	<% @beds.each do |bed| %>
			<div style="background-color:lightgray; padding:10px 25px; margin: 10px 0;">
					<div style="color:drakgray;">Bed</div>
					<div>rent: <strong><%= bed.rent %></strong></div>
					<div>security_deposit: <%= bed.security_deposit %></div>
					<div>room_occupancy: <%= bed.room_occupancy %></div>
			</div>
	<% end %>
</div>

<div style="text-align:center; padding-top:25x;" class="clearfix">
	<div class="col-xs-6">
		<h3>Photos</h3>
		<% @photos = @house.photos %>
		<% @photos.each do |photo| %>
			<div style="margin-top:35px;">
				<div>Photo ID: <%= photo.id %> | House ID: <%= photo.house_id %> | Caption: <%= photo.caption %></div>
				<%= image_tag photo.image.url if photo.image? %>
				<hr style="max-width:400px;">
			</div>
		<% end %>
	</div>

	<div class="col-xs-6">
		<h3>Add new photo of this house</h3>
		<div class="clearfix" style="margin:35px 50px">
				<%= form_for(@house.photos.build, html: { multipart: true }) do |f| %>

					<%= hidden_field_tag :house_id, @house.id %>

					<%= f.file_field :image, class: 'form-control' %>

					<%= f.label :caption %>
					<%= f.text_field :caption, class: 'form-control' %>

					<%= f.submit "Add House Photo", class: "btn btn-block btn-primary" %>
				<% end %>
		</div>
	</div>
</div>



<style type="text/css">
	.form-control {
		float: both;
		margin-bottom: 10px;
	}
</style>
